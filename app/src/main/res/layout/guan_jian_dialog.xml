<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/attestation_bg_edittext">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="门店关键信息完善(必填)"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="20dp"
            android:background="@color/blackccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/public_all"
                android:textSize="14sp"
                android:text="*"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black666"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="最大服务工位"/>
            <EditText
                android:id="@+id/et_max_num"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black666"
                android:paddingLeft="5dp"
                android:hint="输入数量"
                android:background="@drawable/shape_bg_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black666"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="个"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/public_all"
                android:textSize="14sp"
                android:text="*"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black666"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="技师分佣比例"/>
            <EditText
                android:id="@+id/et_fen_yong"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black666"
                android:paddingLeft="5dp"
                android:hint="输入百分比"
                android:background="@drawable/shape_bg_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black666"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="/单"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_commti"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@color/blackeee"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black666"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="提交"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
