<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_time_bg"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="@drawable/green_bian_owei_yuyue"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_time_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="xx:xx-xx:xx"/>

        <TextView
            android:id="@+id/tv_time_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            android:text="技师编号00"/>
        <ImageView
            android:id="@+id/iv_icon_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:src="@mipmap/time_yuyue_bai"/>
        <TextView
            android:id="@+id/tv_static_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="XXX"/>
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:visibility="invisible"
            android:text="XXXXXX"/>
    </LinearLayout>
</LinearLayout>
